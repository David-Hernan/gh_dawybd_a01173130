<%- include('includes/head.ejs') %>

<main class="container">
        <div class="row">
            <a href="/">Volver al menú</a>
            <h1>Login</h1>

            <div class="col s12 m6 l4">
                <br>
                <form action="/login" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
                    <label for="username">Nombre de usuario: </label>
                    <input type="text" id="username" name="username" placeholder="miguel_hidalgo" required>
                    <br/>
                    <br/>
                    <label for="password">Contraseña: </label>
                    <input type="password" id="password" name="password" placeholder="********">
                    <br/>
                    <br/>
                    <div>
                        <div class="g-recaptcha" data-sitekey="6LckHW4dAAAAAPXK0rn4U604VwFGPxbteEYo0N4u"></div>
                    </div>
                    <br><br>
                    <div id="status"></div>
                    <input type="submit" id="enviar" name="enviar" value="Ingresar" onclick="descargar()">
                </form>

                <script>
                    function descargar(){
                        var response = grecaptcha.getResponse();
                        if(response.length != 0)
                            response.redirect('/');
                        else{
                            document.getElementById('status').innerHTML = "Aceptar el captcha primero.";
                        }
                    }
                </script>
                
                
            </div> 
        </div> 

</main>
<br><br><br><br><br><br><br><br>
